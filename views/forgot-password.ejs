<%- include("templates/header-back", {headerMessage: "Forgot Password" }) %>

<form method="POST" action="/forgot-password">
    <div class="container py-2">
    <div class="form-group border-1 dark-green-border my-4">
        <label for="email" class="text-start font-md">Email</label>
        <input type="email" class="form-control border-0 light-green-background font-lg focus" id="email" name="email"
            placeholder="Enter your email" required>
        <span class="error-message dark-pink text-start font-s">
                <%= errorMsg %>
        </span>
    </div>

    <button type="submit" class="btn dark-green-background pill white-font font-lg hover-white-f">
        Submit
    </button>

    </div>
</form>

<!-- Default email validation JS -->
<script src="/scripts/customize_email_validation_toast.js"></script>
