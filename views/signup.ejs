<%- include("templates/header-no-nav") %>

<!-- This block of code is modified from COMP 2537 Assignment 2 by Shuyi Liu, with size and color adaptation made. The function validateForm() is written with assistance of chatGPT -->

<div class="signupsetting">
    <div class="text-center">
        <!-- perform the sign up app.post method so that the user's information can be stored in the database -->
        <form class="form-signup" action="/signup" method="post" onsubmit="return validateForm();">
            <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
            <!-- users are required to enter their username, email address and password to sign up for an account. -->
            <input name="username" type="text" placeholder="Username*">
            <!-- notify the user if the username is already taken -->
            <input name="email" type="email" placeholder="Email address*" class="mt-3">
            <input name="password" type="password" placeholder="Password*" class="mt-3">
            <span class="error-message dark-pink font-s mt-3" id="errorMessage"><%= errorMessage %></span>
            <br>
            <button class="btn btn-lg btn-success btn-block btn-submit mt-3" type="submit">Submit</button>
            <br>
            <!-- redirect users to the login page if they already have an account -->
            <div class="text-center pb-3">
                <p class="px-2">Already have an account? <a href="login" class="dark-green">Log In</a></p>
            </div>
        </form>
    </div>

    <!-- Using array to store the missing fields, and then join them with a comma and space to form a string. Written with assistance from chatGPT -->
    <script>
        function validateForm() {
            var username = document.getElementsByName("username")[0].value;
            var email = document.getElementsByName("email")[0].value;
            var password = document.getElementsByName("password")[0].value;

            // check if the user miss any of the fields and push the missing fields into the array
            var missingFields = [];

            if (!username) {
                missingFields.push("Username");
            }
            if (!email) {
                missingFields.push("Email");
            }
            if (!password) {
                missingFields.push("Password");
            }

            // if user miss any of the fields, the error message will show up with the missing fields
            if (missingFields.length > 0) {
                $("#errorMessage").html("Please provide " + missingFields.join(", ") + ".");
                return false;
            }

            return true;
        }
    </script>

    <!-- toast message for email validation to overwrite the default message -->
    <script src="/scripts/customize_validation_toast.js"></script>

    <!-- Bootstrap CSS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <!-- jQuery library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <!-- Popper JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</div>
</body>

</html>