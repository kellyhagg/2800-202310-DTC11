<!-- Header -->
<%- include("templates/header", {headerMessage: "Settings"}) %>

<!-- Settings Page -->



<div class="container my-2">
    <div class="d-flex align-items-center justify-content-center rounded-circle dark-green-background my- mx-auto">
        <i class="fas fa-user-cog light-green header-icon"></i>
    </div>
    <div class="dark-green text-center">
        <h2><%= userName %></h2>
        <p ><%= email %></p>
    </div>

    <div class="card my-2 dark-green-background border-0 ">
        <div class="card-body p-0 border-0 light-green-border ">
            <div class="form-group border-bottom light-green-border group-height mb-0">
                <!-- add link to edit user name page -->
                <a href="user-name-edit" class="reset-style white-font block active-btn">
                    <div class="d-flex justify-content-between align-items-center button-padding hover-white-f block">
                        <span>User name</span>
                        <i class='fas fa-chevron-right'></i>
                    </div>
                </a>
            </div>
            <div class="form-group border-bottom light-green-border group-height  mb-0 ">
                <!-- add link to edit email page -->
                <a href="email-edit" class="reset-style white-font block active-btn">
                    <div class="d-flex justify-content-between align-items-center button-padding hover-white-f block">
                        <span>Email</span>
                        <i class='fas fa-chevron-right'></i>
                    </div>
                </a>
            </div>
            <div class="form-group group-height  mb-0 ">
                <!-- add link to change password page -->
                <a href="password-change" class="reset-style white-font block active-btn">
                    <div class="d-flex justify-content-between align-items-center button-padding hover-white-f block">
                        <span>Password</span>
                        <i class='fas fa-chevron-right'></i>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="card my-2 dark-green-background border-0">
        <div class="card-body p-0 border-0 light-green-border ">
            <div class="form-group border-bottom light-green-border group-height  mb-0 ">
                <!-- add link to notifications page -->
               <a href="notifications" class="reset-style white-font block active-btn">
                    <div class="d-flex justify-content-between align-items-center button-padding hover-white-f block">
                        <span>Notifications</span>
                        <i class='fas fa-chevron-right'></i>
                    </div>
                </a>
            </div>
            <div class="form-group group-height  mb-0">
                <!-- add link to Help and support page -->
                <a href="#" class="reset-style white-font block active-btn">
                    <div class="d-flex justify-content-between align-items-center button-padding hover-white-f block">
                        <span>Help and support</span>
                        <i class='fas fa-chevron-right'></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <!-- Sign out button -->
    <div class="text-center  my-5">
        <a href="/logout" class="link reset-style dark-green hover-shadow">
            Sign Out
        </a>
    </div>

</div>

<!-- Footer -->
<%- include("templates/footer") %>