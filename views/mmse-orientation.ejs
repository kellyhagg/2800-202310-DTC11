<%- include("templates/header-back", {headerMessage: headerMessage }) %>

    <br><br>

    <div class="card mx-auto rounded">
        <div class="card-body">
            <form method="POST" action="/mmse-orientation">
                <h4>What year is it?</h4>
                <div class="text-boxes">
                    <input type="text" id="year1" name="year1" maxlength="1">
                    <input type="text" id="year2" name="year2" maxlength="1">
                    <input type="text" id="year3" name="year3" maxlength="1">
                    <input type="text" id="year4" name="year4" maxlength="1">
                </div>
                <br>
                <h4>What month is it</h4>
                <h4> (as a 2-digit number)?</h4>
                <div class="text-boxes">
                    <input type="text" id="month" name="month" maxlength="2" style="width: 40%">
                </div>
                <br>
                <h4>What day of the week is it?</h4>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="spinner">
                            <button class="up spinner-btn" type="button">&#9650;</button>
                            <input type="text" class="spinner-value" id="day" name="day" value="Monday" readonly>
                            <button class="down spinner-btn" type="button">&#9660;</button>
                        </div>
                    </div>
                </div>
                <script>
                    // Spinner feature created by ChatGPT
                    const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];
                    let index = 0;

                    const upButton = document.querySelector(".up");
                    const downButton = document.querySelector(".down");
                    const value = document.querySelector(".spinner-value");


                    upButton.addEventListener("click", () => {
                        index++;
                        if (index >= days.length) {
                            index = 0;
                        }
                        value.value = days[index];
                    });

                    downButton.addEventListener("click", () => {
                        index--;
                        if (index < 0) {
                            index = days.length - 1;
                        }
                        value.value = days[index];
                    });
                </script>
        </div>
    </div>
    <br><br>

    <%- include("templates/mmse-footer", {questionType : "orientation" , mmseBtnText: "Next" , reference
        : "/mmse-orientation" }) %>
        </form>