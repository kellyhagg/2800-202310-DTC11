<%- include("templates/header", {headerMessage: "Homepage" }) %>
<style>
    .homepagestyle {
        background-image: url('/homepage_background.jpg');
        background-size: cover;
        height: 100%;
        width: 100%;
        padding-top: 5%;
    }

    .precom_homepage_card {
        color: rgb(126, 47, 25);
        border-radius: 5%;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        margin-left: 4%;
        margin-right: 4%;
        padding: 5%;
        text-align: center;
        border-radius: 15px;
    }

    .pact_tracking {
        font-size: 28px;
        font-weight: bold;
        margin-top: 5%;
    }

    .hptracking {
        margin: 5%;
        padding-top: 1%;
        border-radius: 15px;
    }

    .hpicon-container {
        display: flex;
        justify-content: center;
        margin: 5%;
    }

    .hpiconset {
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        margin: 5%;
    }

    .hpicon {
        align-items: center;
        border-radius: 50%;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        display: flex;
        height: 60px;
        justify-content: center;
        text-align: center;
        width: 60px;
    }

    .hpicon-text {
        color: #2f3c08;
        font-size: 16px;
        margin-top: 10px;
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 50px;
        margin-right: 50px;
        padding-bottom: 20%;
    }

    .material-symbols-outlined {
        font-size: 50px;
        font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 200,
            'opsz' 48
    }

    .hpbutton {
        font-size: 30px;
    }
</style>

<div class="homepagestyle">
    <!-- personal recommendation based on the user's responses to the risk factor survey, activity tracking and the MMSE questionnaire -->
    <div class="precom_homepage_card pink-less-transparent-background text-center">
        <h4>This is a place holder for personal recommendation of the day generated based on user data.</h4>
    </div>
    <!-- activity tracking section -->
    <div class="hptracking white-less-transparent-background">
        <!-- this part of code uses google material icon -->
        <h2 class="pact_tracking text-center">Activity Tracking</h2>
        <div class="hpicon-container">
            <!-- exercise tracking section -->
            <div href="#" class="hpiconset">
                <div class="hpicon dark-green-background">
                    <span class="material-symbols-outlined white-font">
                        hiking
                    </span>
                </div>
                <span class="hpicon-text">Exercise</span>
            </div>
            <!-- social tracking section -->
            <div href="#" class="hpiconset">
                <div class="hpicon dark-green-background">
                    <span class="material-symbols-outlined white-font">
                        connect_without_contact
                    </span>
                </div>
                <span class="hpicon-text">Social</span>
            </div>
            <!-- social tracking section -->
            <div href="#" class="hpiconset">
                <div class="hpicon dark-green-background">
                    <span class="material-symbols-outlined white-font">
                        smoking_rooms
                    </span>
                </div>
                <span class="hpicon-text">Smoking</span>
            </div>
            <!-- alcohol consumption tracking section -->
            <div href="#" class="hpiconset">
                <div class="hpicon dark-green-background">
                    <span class="material-symbols-outlined white-font">
                        liquor
                    </span>
                </div>
                <span class="hpicon-text">Alcohol</span>
            </div>
        </div>
    </div>
    <div class="button-container">
        <!-- redirect to daily game page -->
        <a href="#" class="hpbutton w-100 btn btn-lg dark-green-background white-font mt-3 mb-3">Daily Game</a>
        <!-- redirect to questionnaire page -->
        <a href="mmse-landing-page"
            class="hpbutton w-100 btn btn-lg dark-green-background white-font mt-3 mb-3">Questionnaire</a>
    </div>
</div>
<%- include("templates/footer") %>