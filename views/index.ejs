<%- include("templates/header-no-nav") %>
<div class="index-page-container">
    <div>
        <!-- This is modified from bootstrap's carousel example: https://getbootstrap.com/docs/5.3/examples/carousel/ -->
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Three pictures with captions that introduces the app -->
            <div class="carousel-inner">
                <div class="index-pic-container carousel-item active">
                    <img src="/images/objects/index1.jpg" class="d-block w-100" alt="Image 3">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1>Take Control of Your Cognitive Health</h1>
                            <p>Our app is designed to help you maintain your cognitive health through personalized
                                exercises
                                and tips.</p>
                        </div>
                    </div>
                    <img src="/images/objects/ReCallRx.png" class="logo-image" alt="logo-image">
                </div>
                <div class="index-pic-container carousel-item">
                    <img src="/images/objects/index2.jpg" class="d-block w-100" alt="Image 1">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Protect Your Brain, Protect Your Future</h1>
                            <p>With our app, you'll receive regular reminders and guidance to help you stay on track
                                with
                                your brain health goals.</p>
                        </div>
                    </div>
                    <img src="/images/objects/ReCallRx.png" class="logo-image" alt="logo-image">
                </div>
                <div class="index-pic-container carousel-item">
                    <img src="/images/objects/index3.jpg" class="d-block w-100" alt="Image 2">
                    <div class="container">
                        <div class="carousel-caption text-end">
                            <h1>Stay Sharp and Focused</h1>
                            <p>Sign up for our app today and take the first step towards a healthier, happier brain.</p>
                        </div>
                    </div>
                    <img src="/images/objects/ReCallRx.png" class="logo-image" alt="logo-image">
                </div>
            </div>

            <!-- Carousel controls that allows switching pictures -->
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Sign up button and login button that links to the respective pages -->
        <div class="text-center mt-4 index-buttons">
            <div class="text-content">
                <!-- redirect to Sign Up page if the user does not have an account-->
                <a href='/signup' class="btn btn-lg btn-primary btn-block rounded-pill px-4 py-2 mx-auto"
                    style="background-color: #778251; width: 250px; border-color: #778251; font-size: 1.5rem;">
                    Sign Up
                </a>
                <br>
                <!-- redirect to Log In page if the user already has an account -->
                <a href='/login' class="btn btn-lg btn-secondary rounded-pill px-4 py-2 mx-auto"
                    style="width: 250px; background-color: #D88A63; border-color: #D88A63; color: #ffffff; font-size: 1.5rem;">
                    Log In
                </a>
            </div>
        </div>
    </div>