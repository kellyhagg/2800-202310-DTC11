<!-- Header -->
<%- include("templates/header-back", {headerMessage: "Password Update" }) %>
    <!-- User name page  -->
    <form method="POST" action="update-password/<%= user[0]._id %>" class="mx-2 px-1">
        <div class="container py-2">
            <!-- Password -->
            <div class="form-group border-1 dark-green-border mt-3">
                <label for="name" class="text-start font-md">New password*</label>
                <input type="password" class="form-control border-0 light-green-background font-lg focus" id="password"
                    name="password" placeholder="Enter your password" required>
            </div>
            <!-- Confirm Password -->
            <div class="form-group border-1 dark-green-border my-2">
                <label for="name" class="text-start font-md">Confirm password*</label>
                <input type="password" class="form-control border-0 light-green-background font-lg focus" id="confirmPassword"
                    placeholder="Enter your password" required>
            </div>
            <!-- Error message -->
            <div class="error dark-pink d-none" id="error-message">
                <p> Passwords don't match.</p>
            </div>
            <!-- Save button -->
            <button type="submit" class="btn dark-green-background pill white-font font-lg my-4" id="submitButton">
                Save
            </button>
        </div>

    
       
    </form>
    <!-- Account JS -->
    <script src="scripts/account.js"></script>
