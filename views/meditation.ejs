<!-- Header -->
<%- include("templates/header-back", {headerMessage: "Quick therapy" }) %>

<div class="content my-4 mx-4 shadow b-radius">
    <div class="card light-green-background  mx-auto py-2 px-4 ">
        <div class="container player-content p-0">
            <div class="top-bar d-flex justify-content-center align-items-center dark-green t-shadow font-lg my-2">
                <!-- <i class="material-icons">expand_more</i> -->
                <h3> Daily Calm </h3>
                <!-- <i class="material-icons">more_horiz</i> -->
                </div>
                <div class="image-wrapper">
                    <div class="music-image d-flex align-items-center justify-content-center my-3">
                        <img src="/images/objects/banana.jpg" alt="...">
                    </div>
                </div>
                <div class="music-title text-center mb-2" >
                    <p class="purpose">purpose</p>
                </div>
                <div class="progress-info w-100">
                    <div class="progress-bar">
                        <span></span>
                    </div>
                    <div class="time d-flex justify-content-between align-items-center">
                        <span class="current-time">0:00</span>
                        <span class="duration">5:30</span>
                    </div>
                </div>
                <div class="control-btn d-flex justify-content-center align-items-center mt-4 mb-2 py-2">
                    <div class="control play-pause d-flex align-items-center justify-content-center mx-2">
                        <i class="material-icons dark-green p-0">play_arrow</i>
                    </div>
                    <div class="control loop d-flex align-items-center justify-content-center mx-2 deactivated">
                        <i class="material-icons  dark-green p-0" id="loop">loop</i>
                    </div>
                </div>
            
            <audio src="/music/play/mdeitation.mp3" class="audio"></audio>

        </div>
    </div>
</div>

<!-- Footer -->
<%- include("templates/footer") %>

<!-- Player JS -->
<script src="/scripts/playlist.js"></script>
<script src="/scripts/player.js"></script>